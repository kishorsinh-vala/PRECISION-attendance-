<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPricision"
    tools:context=".ChangePassword">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cPwd_ed_oldPwd"
        android:padding="12dp"
        android:textSize="25dp"
        android:textColorHint="@color/colorWhite"
        android:textColor="@color/colorWhite"
        android:editable="false"
        android:hint="New Password"/>

    <EditText
        android:layout_below="@id/cPwd_ed_oldPwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cPwd_ed_newPwd"
        android:padding="12dp"
        android:textSize="25dp"
        android:textColorHint="@color/colorWhite"
        android:textColor="@color/colorWhite"

        android:hint="New Password"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/turquoiseBlue"
        android:textSize="30dp"
        android:onClick="change"
        android:id="@+id/cPwd_btn_ch"
        android:layout_below="@id/cPwd_ed_newPwd"
        android:layout_marginRight="12dp"
        android:text="Change"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/turquoiseBlue"
        android:textSize="30dp"
        android:layout_toRightOf="@id/cPwd_btn_ch"
        android:onClick="clear"
        android:layout_below="@id/cPwd_ed_newPwd"
        android:layout_marginRight="12dp"
        android:text="@string/app_clear"/>
</RelativeLayout>