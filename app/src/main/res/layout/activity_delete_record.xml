<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPricision"
    tools:context=".DeleteRecord">

    <TextView
        android:id="@+id/del_txt_oldfnm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:text="Old First Name"
        android:maxLength="15"
        android:alpha="0.5"
        android:textSize="30dp"
        android:textColor="@color/colorRed"/>
    <TextView
        android:id="@+id/del_txt_oldlnm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/del_txt_oldfnm"
        android:padding="12dp"
        android:text="Old Last Name"
        android:maxLength="15"
        android:alpha="0.5"
        android:textSize="30dp"
        android:textColor="@color/colorRed"/>

    <TextView
        android:id="@+id/del_txt_streem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/del_txt_oldlnm"
        android:text="STREEM"
        android:layout_margin="10dp"
        android:textSize="30dp"
        android:textColor="@color/colorWhite"/>
    <EditText
        android:layout_toRightOf="@id/del_txt_streem"
        android:id="@+id/del_txt_str"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/del_txt_oldlnm"
        android:maxLength="15"
        android:layout_margin="10dp"
        android:textSize="30dp"
        android:editable="false"
        android:textColor="@color/colorRed"
        />

    <LinearLayout
        android:id="@+id/del_layout_linear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/del_txt_str"
        android:layout_margin="10dp"
        android:layout_centerHorizontal="true">
        <Button
            android:id="@+id/del_btn_del"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_Delete"
            android:backgroundTint="@color/turquoiseBlue"
            android:textSize="30dp"
            android:layout_marginRight="12dp"/>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        android:textSize="30dp"
        android:textColor="@color/colorRed"
        android:text="* You can't change STREEM"
        />
</RelativeLayout>